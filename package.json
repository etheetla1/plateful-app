{
  "name": "plateful",
  "version": "1.0.0",
  "private": true,
  "description": "Plateful - Grocery management app",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "lint": "turbo run lint",
    "mobile": "pnpm --filter mobile dev",
    "api": "pnpm --filter api dev",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "figma:sync": "cd tools/figma && pnpm install && pnpm sync",
    "figma:tokens": "cd tools/figma && pnpm install && pnpm extract-tokens",
    "figma:assets": "cd tools/figma && pnpm install && pnpm download-assets"
  },
  "devDependencies": {
    "prettier": "^3.1.1",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
