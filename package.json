{
  "name": "plateful",
  "version": "1.0.0",
  "private": true,
  "description": "Plateful - Grocery management app",
  "packageManager": "npm@10.2.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "npm run build --workspace=@plateful/shared && npm run build --workspace=@plateful/ui && npm run build --workspace=api && npm run build --workspace=mobile",
    "build:api": "npm run build --workspace=api",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "lint": "turbo run lint",
    "mobile": "turbo run dev --filter=mobile",
    "api": "turbo run dev --filter=api",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "figma:sync": "cd tools/figma && npm install && npm run sync",
    "figma:tokens": "cd tools/figma && npm install && npm run extract-tokens",
    "figma:assets": "cd tools/figma && npm install && npm run download-assets",
    "android": "cd apps/mobile && npx expo run:android",
    "ios": "cd apps/mobile && npx expo run:ios",
    "verify:firebase": "./verify-firebase-config.sh",
    "prebuild:clean": "cd apps/mobile && npx expo prebuild --clean",
    "test:platforms": "echo 'Run npm run android in one terminal and npm run ios in another'"
  },
  "devDependencies": {
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "@vercel/node": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "expo": "~54.0.13",
    "react": "19.1.0",
    "react-native": "0.81.4",
    "turbo": "^1.11.2",
    "@anthropic-ai/sdk": "^0.24.3",
    "@azure/cosmos": "^4.0.0",
    "@hono/node-server": "^1.11.1",
    "@plateful/shared": "*",
    "@types/uuid": "^11.0.0",
    "axios": "^1.12.2",
    "cheerio": "^1.1.2",
    "dotenv": "^16.3.1",
    "googleapis": "^164.1.0",
    "hono": "^4.0.0",
    "uuid": "^13.0.0"
  }
}
