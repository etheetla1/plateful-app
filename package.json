{
  "name": "plateful",
  "version": "1.0.0",
  "private": true,
  "description": "Plateful - Grocery management app",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "lint": "turbo run lint",
    "mobile": "npm run dev --workspace=mobile",
    "api": "npm run dev --workspace=api",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "figma:sync": "cd tools/figma && npm install && npm run sync",
    "figma:tokens": "cd tools/figma && npm install && npm run extract-tokens",
    "figma:assets": "cd tools/figma && npm install && npm run download-assets",
    "android": "expo run:android",
    "ios": "expo run:ios"
  },
  "devDependencies": {
    "prettier": "^3.1.1",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "expo": "~54.0.13",
    "react": "19.1.0",
    "react-native": "0.81.4"
  }
}
