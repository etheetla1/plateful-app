{
  "name": "api",
  "version": "1.0.0",
  "private": true,
  "packageManager": "npm@10.2.4",
  "scripts": {
    "dev": "tsx dev-server.ts",
    "build": "npm run build --workspace=@plateful/shared && tsc",
    "vercel-build": "echo 'Skipped - handled by root buildCommand'",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .vercel dist",
    "check-youtube": "node check-youtube-key.js",
    "test": "jest --no-coverage",
    "test:clean": "SUPPRESS_CONSOLE=true jest --no-coverage",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:silent": "jest --silent --verbose"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "@azure/cosmos": "^4.0.0",
    "@hono/node-server": "^1.11.1",
    "@plateful/shared": "*",
    "@types/uuid": "^11.0.0",
    "axios": "^1.12.2",
    "cheerio": "^1.1.2",
    "dotenv": "^16.3.1",
    "firebase": "^10.7.1",
    "googleapis": "^164.1.0",
    "hono": "^4.0.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.10.6",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vercel": "^33.0.1"
  }
}
