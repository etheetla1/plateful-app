# Plateful Project Configuration
# This project MUST use npm - do not use pnpm, yarn, or other package managers

# Enable npm workspaces
workspaces=true

# Use npm's default registry
registry=https://registry.npmjs.org/

# Ensure consistent package resolution
legacy-peer-deps=false
strict-peer-deps=false

# Cache configuration
cache-max=86400000
cache-min=3600000

# Security settings
audit-level=moderate
fund=false