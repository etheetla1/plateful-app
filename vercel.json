{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "pnpm run build:api && mkdir -p api && cp -r apps/api/api/* api/",
  "installCommand": "pnpm install",
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@3.0.11"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ]
}

