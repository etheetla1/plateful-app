{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm run build:api",
  "installCommand": "npm ci --workspaces --include-workspace-root",
  "functions": {
    "apps/api/dist/api/**/*.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/apps/api/dist/api/:path*"
    }
  ]
}

