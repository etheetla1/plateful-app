{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "cd apps/api && npm run build",
  "installCommand": "npm install",
  "ignoreCommand": "exit 0",
  "framework": null,
  "functions": {
    "apps/api/api/**/*.ts": {
      "runtime": "nodejs18.x",
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/apps/api/api/:path*"
    }
  ]
}

